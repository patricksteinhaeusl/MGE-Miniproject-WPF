<Window x:Class="ch.hsr.wpf.gadgeothek.admin.GadgetAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch.hsr.wpf.gadgeothek.admin"
        mc:Ignorable="d"
        Title="Gadget add" Height="350" Width="250">
    <StackPanel Orientation="Vertical" Margin="10,10,10,10">
        <Label x:Name="labelInfo" Height="0" Margin="0,0,0,10" VerticalAlignment="Top" Background="Red"/>
        <Label x:Name="labelName" Content="Name:" Margin="0,0,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Name" Height="25" Margin="0,0,0,10" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Name"/>
        <Label x:Name="labelManufacturer" Content="Manufacturer:" Margin="0,0,0,0" VerticalAlignment="Top"/>
        <TextBox Name="Manufacturer" Height="25" Margin="0,0,0,10" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Manufacturer"/>
        <Label x:Name="labelPrice" Content="Price:" Margin="0,0,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Price" Height="25" Margin="0,0,0,10" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Price"/>
        <Button Name="Save" Content="Save" Margin="0,0,0,0" VerticalAlignment="Top" Click="GadgetAddSave_Click" Width="Auto" Height="25"/>
    </StackPanel>
</Window>
